<link rel="stylesheet" href="/stylesheets/styles.css" />

<!--MAIN SEARCH BAR and ACTIVITY DROPDOWN SELECTION-->
<div class="container center-align">
    <form action="" method="get">
        <input id="search" type="text" name="city-input" class="section-search center scrollspy">
        <label>Search</label>
    </form>
    <div class="container">
        <div class="input-field col m6">
            <select>
                <option value="" disabled selected>Select Activity Type</option>
                <option value="1">Historical</option>
                <option value="2">Active</option>
                <option value="3">Gastronomical</option>
                <label>Activity Select</label>
            </select>
        </div>
    </div>
    <form>
        <input for="search" class="submitButton btn waves-effect waves-light btn-large" type="submit" value="Submit">
    </form>
</div>
<div class="divider"></div>

<!--FEATURED ITINERARIES-->
<section class="container ">
    <h3 class="center-align">Featured Itineraries</h3>

    {{!-- #each iterates new templates based on sets of available data --}} {{#each data}} {{!-- Beginning of template --}}
    <div class="test-template section">

        <div class="row">
            <div class="col l6">
                <ul class="list-unstyled">
                    <h4>{{title}}</h4>
                    <div>{{city}}</div>
                </ul>
            </div>
            <div class="col l6">
                <div>Rating</div>
                <div>{{>activityTagPartial}}</div>
            </div>
        </div>
        <div class="row">
            <div class="col l6">
                <span>{{description}}</span>
            </div>
            <div class="col l6">
                <div class="add-btn  btn waves-effect waves-light btn-large" type="submit">ADD</div>
            </div>
        </div>
        <div class="row">
            {{!-- Output partial to template --}} {{> activityPartial}}
        </div>
    </div>
    {{!-- End of Template --}} {{/each}}

</section>

