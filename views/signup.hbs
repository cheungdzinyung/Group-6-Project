<div class="container center-align" id="signup-page">
    <form action="/signup" method="post">
        <div>
            <div>
                <h2>Sign Up</h2>
            </div>
            <div class="ani-bounce">
                <img src="/images/sign_up.png">
            </div>
            <p>We look forward to welcoming you to our community!</p>
            <br>
            <div class="container col l6">
                <i class="far fa-envelope" style="font-size: 30px"></i>
                <input type="text" name="username" placeholder="email" />
            </div>
            <div class="container col l6">
                <i class="fas fa-lock-open" style="font-size: 30px"></i>
                <input type="password" name="password" placeholder="password" />
            </div>
            <div>
                <button class="btn waves-effect waves-light" type="submit" name="action" value="Sign Up">Submit
                    <i class="material-icons right">mode_edit</i>
                </button>
            </div>
        </div>
    </form>
</div>